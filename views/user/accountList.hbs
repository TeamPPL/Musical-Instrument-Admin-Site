
    <div class="container">
        <div class="single_c_title">
            <h2>Account List</h2>
        </div>    
<div class="row">
  <div class="col">
        <div class="table mt-4">
          <table style="width: 100%;">
            <thead>
              <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Full Name</th>
                <th>Phone number</th>
                <th>Email</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
            {{#each accountListItems}}
              <tr>
                <td>{{_id}}</td>
                <td>{{username}}</td>
                <td>{{name}}</td>
                <td>{{phone}}</td>
                <td>{{email}}</td>
                <td>
                  <div class="dropdown">
                    <button type="button" class="btn btn-light btn-circle dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <img src="/img/icon/more.png" style="width:15px;height:15px" />
                    </button>
                    <!--<button class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      ***
                    </button> -->
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="/detail/{{_id}}">Detail</a>

                    <form method="POST" action="/user/remove">
                      <button name="id" value="{{_id}}" class="dropdown-item text-danger">Remove</button>
                    </form>

                  </div>
                  </div>
                </td>
              </tr>              
            {{/each}}
            </tbody>
          </table>
        </div>
  </div>
</div>
        
    </div>